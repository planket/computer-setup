#MOAR hotkeys
#launch programs
bindsym $mod+Shift+n exec nautilus
bindsym $mod+Shift+b exec firefox --new-window
bindsym $mod+Shift+p exec swaylock -f -c 000000
bindsym $mod+Shift+x exec echo -e "Shutdown\nRestart\nLogout" | wofi --dmenu | xargs -I {} sh -c 'case {} in Shutdown) sudo shutdown now;; Restart) sudo reboot;; Logout) swaymsg exit;; esac'
#audio keys
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioMute exec pamixer --toggle-mute
#brightness
bindsym XF86MonBrightnessDown exec brightnessctl s 20%-
bindsym XF86MonBrightnessUp exec sudo brightnessctl s 20%+

#scroll direction
input type:touchpad {
    natural_scroll disabled
}

input type:pointer {
    natural_scroll disabled
}

